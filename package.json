{
  "name": "portfolio-app",
  "version": "1.0.0",
  "scripts": {
    "postinstall": "npm run install-server && npm run install-client",
    "start": "npm run build-client && npm run start-server",
    "start-dev": "npm-run-all --parallel start-server-dev start-client-dev",
    "build-client": "cd client && npm run build",
    "start-client-dev": "cd client && npm run start-dev",
    "start-server": "cd server && npm start",
    "start-server-dev": "cd server && npm run start-dev",
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {}
}
